# This is Git's per-user configuration file.

# Include configs
[include]
  path = ~/.local/share/secrets/git_personal
[include]
  path = ~/.local/share/secrets/git_work

[core]
  editor = nvim
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
# use n and N to move between diff sections
  navigate = true    
# delta detects terminal colors automatically; set one of these to disable auto-detection
  dark = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

