#!/usr/bin/env bash

default_browser=$(xdg-settings get default-web-browser)
browser_cmd=$(sed -n 's/^Exec=\([^ ]*\).*/\1/p' {~/.local,~/.nix-profile,/usr}/share/applications/"$default_browser" 2>/dev/null | head -1)

case $default_browser in
google-chrome* | brave-browser* | microsoft-edge* | opera* | vivaldi* | helium-browser*)
  sub_cmd="--app="
  ;;
*firefox* )
  sub_cmd="--new-window="
  ;;
esac

exec setsid uwsm-app -- "$browser_cmd" "$sub_cmd$1" "${@:2}"
