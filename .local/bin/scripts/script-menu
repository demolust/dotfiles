  *TUI*) present_terminal script-tui-remove ;;
  *Theme*) present_terminal script-theme-remove ;;
  *Windows*) present_terminal "script-windows-vm remove" ;;
  # TBD
  *Fingerprint*) present_terminal "script-setup-fingerprint --remove" ;;
  *Fido2*) present_terminal "script-setup-fido2 --remove" ;;
  *) show_main_menu ;;
  esac
}

show_reset_menu() {
  case $(menu "Restart" "  Process\n󰇅  Hardware\n󰴳  Wireguard\n  Config (Default)\n") in
  *Process*) show_restart_process_menu ;;
  *Hardware*) show_restart_hardware_menu ;;
  *Wireguard*) script-toggle-vpn ;;
  *Config*) show_reset_config_menu ;;
  esac
}

show_restart_process_menu() {
  case $(menu "Restart" "  Hypridle\n󱁝  Sunsetr\n  Swayosd\n󰶭  Walker\n󰍜  Waybar\n  Hyprsunset\n  Background (Change)") in
  *Hypridle*) script-restart-hypridle ;;
  *Hyprsunset*) script-restart-hyprsunset ;;
  *Sunsetr*) script-restart-sunsetr ;;
  *Swayosd*) script-restart-swayosd ;;
  *Walker*) script-restart-walker ;;
  *Waybar*) script-restart-waybar ;;
  *Background*) script-theme-bg-next ;;
  *) show_reset_menu ;;
  esac
}

show_restart_hardware_menu() {
  case $(menu "Restart" "  Audio\n󱚾  Wi-Fi\n󰂯  Bluetooth") in
  *Audio*) present_terminal script-restart-pipewire ;;
  *Wi-Fi*) present_terminal script-restart-wifi ;;
  *Bluetooth*) present_terminal script-restart-bluetooth ;;
  *) show_reset_menu ;;
  esac
}

show_reset_config_menu() {
  local options=" "
  if [[ "$DESKTOP_SESSION" =~ "hyprland" ]]; then
    options="$options\n  Hyprland\n  Hypridle\n  Hyprsunset"
  elif [[ "$DESKTOP_SESSION" == "niri" ]]; then
    options="$options\n  Niri"
  fi
  options="$options\n  Hyprlock\n󱁝  Sunsetr\n  Swayosd\n󰶭  Walker\n󰍜  Waybar\n󰞅  XCompose"

  case $(menu "Use default config" "$options") in
  *Hyprland*) present_terminal script-refresh-hyprland ;;
  *Hypridle*) present_terminal script-refresh-hypridle ;;
  *Hyprlock*) present_terminal script-refresh-hyprlock ;;
  *Hyprsunset*) present_terminal script-refresh-hyprsunset ;;
  *Niri*) present_terminal  script-refresh-niri ;;
  *Sunsetr*) present_terminal script-refresh-sunsetr ;;
  *Plymouth*) present_terminal script-refresh-plymouth ;;
  *Swayosd*) present_terminal script-refresh-swayosd ;;
  *Walker*) present_terminal script-refresh-walker ;;
  *Waybar*) present_terminal script-refresh-waybar ;;
  *) show_reset_menu ;;
  esac
}

show_update_menu() {
  case $(menu "Update" "  System\n  Firmware\n  Password\n  Timezone\n  Time\n󰸌  User Themes\n") in
  *System*) present_terminal script-update ;;
  *Firmware*) present_terminal script-update-firmware ;;
  *Timezone*) present_terminal script-tz-select ;;
  *Time*) present_terminal script-update-time ;;
  *Password*) show_update_password_menu ;;
  *Themes*) present_terminal script-theme-update ;;
  *) show_main_menu ;;
  esac
}

show_update_password_menu() {
  case $(menu "Update Password" "  Drive Encryption\n  User") in
  *Drive*) present_terminal script-drive-set-password ;;
  *User*) present_terminal passwd ;;
  *) show_update_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "  About\n󱄄  Screensaver\n  Lock\n󰤄  Suspend\n󰜉  Restart\n󰐥  Shutdown") in
  *About*) script-launch-about ;;
  *Lock*) script-lock-screen ;;
  *Screensaver*) script-launch-screensaver force ;;
  *Suspend*) systemctl suspend ;;
  *Restart*) script-state clear re*-required && systemctl reboot --no-wall ;;
  *Shutdown*) script-state clear re*-required && systemctl poweroff --no-wall ;;
  *) back_to show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n󰧑  Learn\n  Trigger\n  Setup\n󰋻  Install\n󱖟  Remove\n  Reset\n  Update\n  System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) walker -p "Launch…" ;;
  *learn*) show_learn_menu ;;
  *trigger*) show_trigger_menu ;;
  *share*) show_share_menu ;;
  *theme*) show_theme_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *screenrecord*) show_screenrecord_menu ;;
  *setup*) show_setup_menu ;;
  *power*) show_setup_power_menu ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *update*) show_update_menu ;;
  *reset*) show_reset_menu ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi
