#!/usr/bin/env bash

# Set to true when going directly to a submenu, so we can exit directly
BACK_TO_EXIT=false

back_to() {
  local parent_menu="$1"

  if [[ "$BACK_TO_EXIT" == "true" ]]; then
    exit 0
  elif [[ -n "$parent_menu" ]]; then
    "$parent_menu"
  else
    show_main_menu
  fi
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-c" "$index")
    fi
  fi

  echo -e "$options" | script-launch-walker --dmenu --width 295 --minheight 1 --maxheight 600 -p "$prompt…" "${args[@]}" 2>/dev/null
}

terminal() {
  script-launch-terminal "$@"
}

present_terminal() {
  script-launch-floating-terminal-with-presentation "$1"
}

open_in_editor() {
  notify-send "Editing config file" "$1"
  script-launch-editor "$1"
}

install() {
  present_terminal "echo 'Installing $1...'; script-pkg-add $2"
}

install_and_launch() {
  present_terminal "echo 'Installing $1...'; script-pkg-add $2 && setsid gtk-launch $3"
}

install_font() {
  present_terminal "echo 'Installing $1...'; script-install-nerd-fonts $2 && sleep 2 && script-font-set '$3'"
}

install_terminal() {
  present_terminal "script-install-terminal $1"
}

show_learn_menu() {
  case $(menu "Learn" " Keybindings\n  Niri\n Hyprland\n󰣇  Arch Wiki\n  Neovim\n󱆃  Bash") in
  *Keybindings*) script-menu-keybindings ;;
  *Hyprland*) script-launch-webapp "https://wiki.hypr.land/" ;;
  *Niri*) script-launch-webapp "https://yalter.github.io/niri/" ;;
  *Arch*) script-launch-webapp "https://wiki.archlinux.org/title/Main_page" ;;
  *Bash*) script-launch-webapp "https://devhints.io/bash" ;;
  *Neovim*) script-launch-webapp "https://www.lazyvim.org/keymaps" ;;
  *) show_main_menu ;;
  esac
}

show_trigger_menu() {
  case $(menu "Trigger" "  Capture\n󰒗  Share\n  Toggle") in
  *Capture*) show_capture_menu ;;
  *Share*) show_share_menu ;;
  *Toggle*) show_toggle_menu ;;
  *) show_main_menu ;;
  esac
}

show_capture_menu() {
  case $(menu "Capture" "  Screenshot\n  Screenrecord\n󰃉  Color") in
  *Screenshot*) show_screenshot_menu ;;
  *Screenrecord*) show_screenrecord_menu ;;
  *Color*) pkill hyprpicker || hyprpicker -a ;;
  *) show_trigger_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "  Snap with Editing\n  Straight to Clipboard") in
  *Editing*) script-cmd-screenshot smart ;;
  *Clipboard*) script-cmd-screenshot smart clipboard ;;
  *) show_capture_menu ;;
  esac
}

show_screenrecord_menu() {
  case $(menu "Screenrecord" "  Region\n  Region + Audio\n  Display\n  Display + Audio\n  Display + Webcam") in
  *"Region + Audio"*) script-cmd-screenrecord region --with-audio ;;
  *Region*) script-cmd-screenrecord ;;
  *"Display + Audio"*) script-cmd-screenrecord output --with-audio ;;
  *"Display + Webcam"*) script-cmd-screenrecord output --with-audio --with-webcam ;;
  *Display*) script-cmd-screenrecord output ;;
  *) back_to show_capture_menu ;;
  esac
}

show_share_menu() {
  case $(menu "Share" "  Clipboard\n  File \n  Folder") in
  *Clipboard*) terminal bash -c "script-cmd-share clipboard" ;;
  *File*) terminal bash -c "script-cmd-share file" ;;
  *Folder*) terminal bash -c "script-cmd-share folder" ;;
  *) back_to show_trigger_menu ;;
  esac
}

show_toggle_menu() {
  case $(menu "Toggle" "󱄄  Screensaver\n󰔎  Nightlight\n󱫖  Idle Lock\n󰍜  Top Bar") in
  *Screensaver*) script-toggle-screensaver ;;
  *Nightlight*) script-toggle-nightlight ;;
  *Idle*) script-toggle-idle ;;
  *Bar*) script-toggle-waybar ;;
  *) show_trigger_menu ;;
  esac
}

show_style_menu() {
  local options=" "
  if [[ "$DESKTOP_SESSION" =~ "hyprland" ]]; then
    options="$options\n  Hyprland"
  elif [[ "$DESKTOP_SESSION" == "niri" ]]; then
    options="$options\n  Niri"
  fi
  options="$options\n󰸌  Theme\n  Font\n󱄄  Screensaver\n  About"
  case $(menu "Style" "$options") in
  *Theme*) show_theme_menu ;;
  *Font*) show_font_menu ;;
  *Hyprland*) open_in_editor "$XDG_CONFIG_HOME/hypr/looknfeel.conf" ;;
  *Niri*) open_in_editor "$XDG_CONFIG_HOME/niri/looknfeel.kdl" ;;
  *Screensaver*) open_in_editor "$DOT_DATA_DIR/branding/screensaver.txt" ;;
  *About*) open_in_editor "$DOT_DATA_DIR/branding/about.txt" ;;
  *) show_main_menu ;;
  esac
}

show_theme_menu() {
  theme=$(menu "Theme" "$(script-theme-list)" "" "$(script-theme-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    back_to show_style_menu
  else
    script-theme-set "$theme"
  fi
}

show_font_menu() {
  theme=$(menu "Font" "$(script-font-list)" "--width 350" "$(script-font-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    back_to show_style_menu
  else
    script-font-set "$theme"
  fi
}

show_setup_menu() {
  local options="  Audio\n  Wifi\n󰂯  Bluetooth\n󱐋  Power Profile"
  if [[ "$DESKTOP_SESSION" =~ "hyprland" ]]; then
    [ -f "$XDG_CONFIG_HOME/hypr/bindings.conf" ] && options="$options\n Keybindings"
    [ -f "$XDG_CONFIG_HOME/hypr/input.conf" ] && options="$options\n  Input"
    [ -f "$XDG_CONFIG_HOME/hypr/monitors.conf" ] && options="$options\n󰍹  Monitors"
  elif [[ "$DESKTOP_SESSION" == "niri" ]]; then
    [ -f "$XDG_CONFIG_HOME/niri/bindings.kdl" ] && options="$options\n Keybindings"
    [ -f "$XDG_CONFIG_HOME/niri/input.kdl" ] && options="$options\n  Input"
    [ -f "$XDG_CONFIG_HOME/niri/monitors.kdl" ] && options="$options\n󰍹  Monitors"
  fi
  options="$options\n  Security\n  Defaults (uwsm)\n  Style\n  Config (WM)"

  case $(menu "Setup" "$options") in
  *Audio*) script-launch-audiomix ;;
  *Wifi*)
    rfkill unblock wifi
    script-launch-wifi
    ;;
  *Bluetooth*)
    rfkill unblock bluetooth
    blueman-manager
    ;;
  *Power*) show_setup_power_menu ;;
  *Security*) show_setup_security_menu ;;
  *Config*) show_setup_config_menu ;;
  *Defaults*) open_in_editor "$XDG_CONFIG_HOME/uwsm/default" ;;
  *Monitors*)
    if [[ "$DESKTOP_SESSION" =~ "hyprland" ]]; then
      open_in_editor "$XDG_CONFIG_HOME/hypr/monitors.conf"
    elif [[ "$DESKTOP_SESSION" == "niri" ]]; then
      open_in_editor "$XDG_CONFIG_HOME/niri/monitors.kdl"
    fi
    ;;
  *Keybindings*)
    if [[ "$DESKTOP_SESSION" =~ "hyprland" ]]; then
      open_in_editor "$XDG_CONFIG_HOME/hypr/bindings.conf"
    elif [[ "$DESKTOP_SESSION" == "niri" ]]; then
      open_in_editor "$XDG_CONFIG_HOME/niri/bindings.kdl"
    fi
    ;;
  *Input*)
    if [[ "$DESKTOP_SESSION" =~ "hyprland" ]]; then
      open_in_editor "$XDG_CONFIG_HOME/hypr/input.conf"
    elif [[ "$DESKTOP_SESSION" == "niri" ]]; then
      open_in_editor "$XDG_CONFIG_HOME/niri/input.kdl"
    fi
    ;;
  *Style*) show_style_menu ;;
  *) show_main_menu ;;
  esac
}

show_setup_power_menu() {
if [[ "$(command -v powerprofilesctl)" ]]; then
  profile=$(menu "Power Profile" "$(script-powerprofiles-list)" "" "$(powerprofilesctl get)")
  if [[ "$profile" == "CNCLD" || -z "$profile" ]]; then
    back_to show_setup_menu
  else
    powerprofilesctl set "$profile"
  fi
elif [[ "$(command -v tuned-adm)" ]]; then
  profile=$(menu "Power Profile" "$(script-powerprofiles-list)" "" "$(tuned-adm active)")
  if [[ "$profile" == "CNCLD" || -z "$profile" ]]; then
    back_to show_setup_menu
  else
    tuned-adm profile "$profile"
  fi
fi
}

show_setup_config_menu() {
  local options=" "
  if [[ "$DESKTOP_SESSION" =~ "hyprland" ]]; then
    options="$options\n Hyprland\n Hypridle\n Hyprsunset"
  elif [[ "$DESKTOP_SESSION" == "niri" ]]; then
    options="$options\n  Niri"
  fi
  options="$options\n Hyprlock\n󱁝  Sunsetr\n  Swayosd\n󰶭  Walker\n󰍜  Waybar\n󰞅  XCompose\n󰱔  DNS"

  case $(menu "Setup" "$options") in
  *Hyprland*) open_in_editor "$XDG_CONFIG_HOME/hypr/hyprland.conf" ;;
  *Hypridle*) open_in_editor "$XDG_CONFIG_HOME/hypr/hypridle.conf" && script-restart-hypridle ;;
  *Hyprlock*) open_in_editor "$XDG_CONFIG_HOME/hypr/hyprlock.conf" ;;
  *Hyprsunset*) open_in_editor "$XDG_CONFIG_HOME/hypr/hyprsunset.conf" && script-restart-hyprsunset ;;
  *Niri*) open_in_editor "$XDG_CONFIG_HOME/niri/config.kdl" ;;
  *Sunsetr*) open_in_editor "$XDG_CONFIG_HOME/sunsetr/sunsetr.toml" && script-restart-sunsetr ;;
  *Swayosd*) open_in_editor "$XDG_CONFIG_HOME/swayosd/config.toml" && script-restart-swayosd ;;
  *Walker*) open_in_editor "$XDG_CONFIG_HOME/walker/config.toml" && script-restart-walker ;;
  *Waybar*) open_in_editor "$XDG_CONFIG_HOME/waybar/config.jsonc" && script-restart-waybar ;;
  *XCompose*) open_in_editor "$XCOMPOSEFILE" && script-restart-xcompose ;;
  *DNS*) present_terminal script-setup-dns ;;
  *) show_main_menu ;;
  esac
}

show_setup_security_menu() {
  case $(menu "Setup" "󰈷  Fingerprint\n  Fido2") in
  *Fingerprint*) present_terminal script-setup-fingerprint ;;
  *Fido2*) present_terminal script-setup-fido2 ;;
  *) show_setup_menu ;;
  esac
}

