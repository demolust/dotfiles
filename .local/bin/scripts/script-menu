  *Victor*) install_font "Victor Code" "VictorMono" "VictorMono Nerd Font" ;;
  *Bistream*) install_font "Bistream Vera Code" " BitstreamVeraSansMono" "BitstromWera Nerd Font" ;;
  *) show_install_menu ;;
  esac
}

