#!/usr/bin/env bash

set -e

trap 'echo ""; echo -e "\033[0;31mSomething went wrong during the update!\n\nPlease review the output above carefully, correct the error, and retry the update.\n\n\033[0m"' ERR

script-update-confirm || exit 1
script-snapshot create || [ $? -eq 127 ]
script-update-perform
