#!/usr/bin/env bash

if [ "$#" -lt 3 ]; then
  echo -e "\e[32mLet's create a new web app you can start with the app launcher.\n\e[0m"
  APP_NAME=$(gum input --prompt "Name> " --placeholder "My favorite web app")
  APP_URL=$(gum input --prompt "URL> " --placeholder "https://example.com")
  ICON_SEL=$(gum input --prompt "Icon URL> " --placeholder 'Either a file (use $HOME) or a url, see https://dashboardicons.com (use SVG||PNG)')
  CUSTOM_EXEC=""
  MIME_TYPES=""
  INTERACTIVE_MODE=true
else
  APP_NAME="$1"
  APP_URL="$2"
  ICON_SEL="$3"
  CUSTOM_EXEC="$4" # Optional custom exec command
  MIME_TYPES="$5"  # Optional mime types
  INTERACTIVE_MODE=false
fi

# Ensure valid execution
if [[ -z "$APP_NAME" || -z "$APP_URL" || -z "$ICON_SEL" ]]; then
  echo "You must set app name, app command, and icon file path or URL!"
  exit 1
fi

DESKTOP_DIR="$APP_DESKTOP_DIR"
ICON_DIR="$APP_ICON_DIR"
DESKTOP_FILE="$DESKTOP_DIR/$APP_NAME.desktop"

# Refer to local icon or fetch remotely from URL
ICON_SEL=$(echo "$(eval echo "$ICON_SEL")" || echo "")
if [[ -f "$ICON_SEL" ]]; then
  rsync -havzP "$ICON_SEL" "$ICON_DIR/$APP_NAME.png"
  ICON_PATH="$ICON_DIR/$APP_NAME.png"
elif  [[ "$ICON_SEL" =~ ^https?:// ]]; then
  ICON_PATH="$ICON_DIR/$APP_NAME.png"
  mkdir -p "$ICON_DIR"
  if ! curl -sL -o "$ICON_PATH" "$ICON_SEL"; then
    echo "Error: Failed to download icon."
    exit 1
  fi
else
  echo "Unsoported format must use URL or a file path"
  exit 1
fi

# Use custom exec if provided, otherwise default behavior
if [[ -n $CUSTOM_EXEC ]]; then
  EXEC_COMMAND="$CUSTOM_EXEC"
else
  EXEC_COMMAND="script-launch-webapp $APP_URL"
fi

cat >"$DESKTOP_FILE" <<EOF
[Desktop Entry]
Version=1.0
Name=$APP_NAME
Comment=$APP_NAME
Exec=$EXEC_COMMAND
Terminal=false
Type=Application
Icon=$ICON_PATH
StartupNotify=true
EOF

# Add mime types if provided
if [[ -n $MIME_TYPES ]]; then
  echo "MimeType=$MIME_TYPES" >>"$DESKTOP_FILE"
fi

if [[ $INTERACTIVE_MODE == true ]]; then
  echo -e "You can now find $APP_NAME using the app launcher (SUPER + SPACE)\n"
fi
