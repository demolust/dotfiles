#!/usr/bin/env bash

source "$(dirname "$0")"/pkg_manager.sh

if [[ "$DISTRO_ID" == "arch" ]];then
  export OPTS=""
  export DOCKER_BIN=podman
  export COMPOSE_BIN=podman-compose
  export RDP_BIN=xfreerdp3
elif [[ "$DISTRO_ID" == "fedora" ]];then
  export OPTS=":Z"
  export DOCKER_BIN=podman
  export COMPOSE_BIN=podman-compose
  export RDP_BIN=xfreerdp
elif [[ "$DISTRO_ID" == "rhel" ]];then
  export OPTS=":Z"
  export DOCKER_BIN=podman
  export COMPOSE_BIN=podman-compose
  export RDP_BIN=xfreerdp
elif [[ "$DISTRO_ID" =~ opensuse* ]];then
  export OPTS=""
  export DOCKER_BIN=podman
  export COMPOSE_BIN=podman-compose
  export RDP_BIN=xfreerdp
elif [[ "$DISTRO_ID" == "ubuntu" ]];then
  export OPTS=""
  export DOCKER_BIN=podman
  export COMPOSE_BIN=podman-compose
  export RDP_BIN=xfreerdp3
elif [[ "$DISTRO_ID" == "debian" ]];then
  export OPTS=""
  export DOCKER_BIN=podman
  export COMPOSE_BIN=podman-compose
  export RDP_BIN=xfreerdp3
fi
